<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="Settings"
        app:icon="@drawable/ic_settings">

        <ListPreference
            app:key="language"
            app:title="Change the app language"
            app:useSimpleSummaryProvider="true"
            app:dialogTitle="Choose the language"
            app:entries="@array/language"
            app:entryValues="@array/language_values" />

        <SwitchPreferenceCompat
            app:key="font"
            app:summaryOff=""
            app:summaryOn=""
            app:title="" />
    </PreferenceCategory>

</PreferenceScreen>
