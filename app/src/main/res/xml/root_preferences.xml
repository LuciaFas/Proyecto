<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:icon="@drawable/ic_settings"
        app:title="Settings">

        <ListPreference
            app:dialogTitle="Choose the language"
            app:entries="@array/language"
            app:entryValues="@array/language_values"
            app:key="language"
            app:title="Change the app language"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:dialogTitle="Choose the font"
            app:entries="@array/fonts"
            app:entryValues="@array/font_values"
            app:key="font"
            app:title="Change the font for the app"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>
